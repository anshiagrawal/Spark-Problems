Using Pyspark:
# Initialize Spark session
from pyspark.sql import SparkSession
spark = SparkSession.builder.appName('Spark Playground').getOrCreate()


df= spark.read.csv("/datasets/customers.csv",inferSchema= True,header=True)


dfFiltered= df.filter((df.purchase_amount>100) & (df.age>30))
#Copy the starter code or load the file path available in the problem statement 

# Display the final DataFrame using the display() function.
display(dfFiltered.select("customer_id","name","purchase_amount"))

Using SQL





df.createOrReplaceTempView("my_table")

val result = spark.sql("select * from my_table where purchase_amount> 100 and age >30")


display(result)

